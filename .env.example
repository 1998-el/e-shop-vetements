# Environment Variables Template
# Copy this file to .env.local and configure your values

# Backend API URL
VITE_API_URL=http://ebca1707.odns.fr/public_html/api

# Stripe Configuration
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# PayPal Configuration
VITE_PAYPAL_CLIENT_ID=your_paypal_client_id_here
VITE_PAYPAL_ENVIRONMENT=sandbox

# Database (for backend)
DATABASE_URL=postgresql://username:password@localhost:5432/ecommerce

# Stripe Secret Key (for backend)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here

# PayPal Configuration (for backend)
PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here
PAYPAL_ENVIRONMENT=sandbox

# JWT Secret (for backend)
JWT_SECRET=your_jwt_secret_here

# Email Configuration (for backend)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# File Upload (for backend)
MAX_FILE_SIZE=5242880
UPLOAD_DIR=uploads

# Rate Limiting (for backend)
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100